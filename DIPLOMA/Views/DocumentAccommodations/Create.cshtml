@model DIPLOMA.Models.DocumentAccommodation

@{
    ViewData["Title"] = "Создание - Карточка гостя";
}

<h1 class="mb-5">Создание</h1>

<h4>Карточка гостя</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container">
                <fieldset>
                    <legend>Основное</legend>
                    <div class="row">
                        <div class="form-group col">
                            <label asp-for="DirectoryStatusAccommodationID" class="control-label">Статус карточки</label>
                            <select asp-for="DirectoryStatusAccommodationID" class="form-control" asp-items="ViewBag.DirectoryStatusAccommodationID"></select>
                        </div>
                        <div class="form-group col">
                            <label class="control-label">Статус проживания</label>
                            <select class="form-control">
                                <option>Номер</option>
                                <option>Койко-место</option>
                            </select>
                        </div>
                        <div class="form-group col">
                            <label asp-for="DateAccommodation" class="control-label">Дата заселения</label>
                            <input type="date" class="form-control" />
                            <input type="time" class="form-control mt-1" />
                            <span asp-validation-for="DateAccommodation" class="text-danger"></span>
                        </div>
                        <div class="form-group col">
                            <label asp-for="DateEviction" class="control-label">Дата выселения</label>
                            <input type="date" class="form-control" />
                            <input type="time" class="form-control mt-1" />
                            <span asp-validation-for="DateEviction" class="text-danger"></span>
                        </div>
                </fieldset>
            </div>
            <fieldset>
                <legend>Гость</legend>
                <fieldset>
                    <legend>Выбор Гостя</legend>
                    <div class="row">
                        <div class="form-group col-4">
                            <select class="form-control" >
                                <option></option>
                                <option>Александр Ивановчи Петров, паспорт 0110 111111</option>
                                <option>Валентин Николаевич Руднев, паспорт 1210 632435</option>
                                <option>Владимир Сергеевич Антонов, паспорт 0101 258395</option>
                            </select>
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Создание Гостя</legend>
                    <div class="row">
                        <div class="form-group col">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group col">
                            <label asp-for="SecondName" class="control-label"></label>
                            <input asp-for="SecondName" class="form-control" />
                            <span asp-validation-for="SecondName" class="text-danger"></span>
                        </div>
                        <div class="form-group col">
                            <label asp-for="Patronymic" class="control-label"></label>
                            <input asp-for="Patronymic" class="form-control" />
                            <span asp-validation-for="Patronymic" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col">
                            <label asp-for="TelephoneNumber" class="control-label"></label>
                            <input asp-for="TelephoneNumber" class="form-control" />
                            <span asp-validation-for="TelephoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col">
                            <label asp-for="ClientDate" class="control-label">Дата создания</label>
                            <input asp-for="ClientDate" class="form-control" />
                            <span asp-validation-for="ClientDate" class="text-danger"></span>
                        </div>
                    </div>
                </fieldset>
            </fieldset>

            <fieldset>
                <legend>Номер</legend>
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="DirectoryCategoryRoomsID" class="control-label">Категория номера</label>
                        <select asp-for="DirectoryCategoryRoomsID" class="form-control" id="DirectoryCategoryRooms" asp-items="ViewBag.DirectoryCategoryRoomsID"></select>
                    </div>
                    <div class="form-group col">
                        <label asp-for="DirectoryTypeRoomsID" class="control-label">Вид номера</label>
                        <select asp-for="DirectoryTypeRoomsID" class="form-control" id="DirectoryTypeRooms" asp-items="ViewBag.DirectoryTypeRoomsID"></select>
                    </div>
                </div>
                <div class="row">                
                    <div class="form-group col">
                        <label asp-for="NumberRoom" class="control-label" id="NumberRoom">Номер комнаты</label>
                        <select class="form-control">
                            <option></option>
                            <option>201</option>
                            <option>202</option>
                            <option>203</option>
                        </select>
                        <span asp-validation-for="NumberRoom" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="CostPerDay" class="control-label">Цена за день (руб.)</label>
                        <input asp-for="CostPerDay" class="form-control" />
                        <span asp-validation-for="CostPerDay" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="CostTotal" class="control-label">Полная стоимость (руб.)</label>
                    <input asp-for="CostTotal" class="form-control" />
                    <span asp-validation-for="CostTotal" class="text-danger"></span>
                </div>
            </div>
</div>

                <div class="form-group col">
                    <input type="submit" value="Создать" class="btn btn-primary" />
                    <a asp-action="Index"  class="btn btn-outline-dark">Назад</a>
                </div>
</form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

